---
import Layout from '../layouts/Layout.astro';
import { tool as identileTool } from './identile.astro';

// Define available tools
const tools = [identileTool];

const GITHUB_REPO = 'https://github.com/sabiz/Garage';
---

<Layout>
  <div class="min-h-full flex flex-col items-center justify-center p-8 bg-gradient-to-br from-slate-50 to-slate-100">
    <main class="max-w-4xl w-full">
      <!-- Header -->
      <header class="text-center mb-12">
        <h1 class="text-5xl font-bold text-slate-900 mb-4">
          Garage
        </h1>
        <p class="text-xl text-slate-600">
          sAbIz developed tools collection.
        </p>
      </header>

      <!-- Tools Section -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-slate-800 mb-6">
          Available Tools
        </h2>

        {tools.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {tools.map((tool) => (
              <a
                href={tool.path}
                class="block p-6 bg-white rounded-sm shadow-md hover:shadow-lg transition-shadow duration-200 border border-slate-200 hover:border-slate-300"
              >
                <h3 class="text-xl font-semibold text-slate-900 mb-2">
                  {tool.name}
                </h3>
                <p class="text-slate-600">
                  {tool.description}
                </p>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center p-12 bg-white rounded-sm shadow-md border border-slate-200">
            <p class="text-slate-500 text-lg">
              No tools available yet. Check back soon!
            </p>
          </div>
        )}
      </section>

      <!-- Footer -->
      <footer class="text-center">
        <a
          href={GITHUB_REPO}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-slate-900 text-white rounded-lg hover:bg-slate-800 transition-colors duration-200 font-medium"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          View on GitHub
        </a>
      </footer>
    </main>
  </div>
</Layout>
